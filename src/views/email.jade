    meta(name='viewport', content='width=743')
    meta(http-equiv='content-type', content='text/html;charset=utf-8')
    style.(type='text/css')
        a,a:link,a:visited,a:active,a.mils-link,a.mils-link:link,a.mils-link:visited,a.mils-link:active { color: #08C; text-decoration:none }
